<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="moviesPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>portal.movies.repository.entity.ActorsEntity</class>
        <class>portal.movies.repository.entity.AuthoritiesEntity</class>
        <class>portal.movies.repository.entity.CategoriesEntity</class>
        <class>portal.movies.repository.entity.CategoriesMetaEntity</class>
        <class>portal.movies.repository.entity.FileEntity</class>
        <class>portal.movies.repository.entity.PhotosEntity</class>
        <class>portal.movies.repository.entity.PostActorMetaEntity</class>
        <class>portal.movies.repository.entity.PostVideoMetaEntity</class>
        <class>portal.movies.repository.entity.PostsEntity</class>
        <class>portal.movies.repository.entity.SubtitlesEntity</class>
        <class>portal.movies.repository.entity.TagsEntity</class>
        <class>portal.movies.repository.entity.TagsMetaEntity</class>
        <class>portal.movies.repository.entity.TrailersEntity</class>
        <class>portal.movies.repository.entity.UrlMetaEntity</class>
        <class>portal.movies.repository.entity.UsersEntity</class>
        <class>portal.movies.repository.entity.VideoSubtitleMetaEntity</class>
        <class>portal.movies.repository.entity.VideosEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/movies_portal"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
